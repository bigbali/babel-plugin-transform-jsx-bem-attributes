{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2022"
        ],
        "outDir": "./lib",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "incremental": true,
        "pretty": true,
        "composite": false
    },
    "types": [
        "react",
        "node"
    ],
    "include": [
        "src",
        "index.d.ts"
    ],
    "exclude": [
        "lib"
    ],
    "references": [
        {
            "path": "./test/tsconfig.json"
        }
    ]
}