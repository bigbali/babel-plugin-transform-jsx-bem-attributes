        "module": "commonjs",
        "moduleResolution": "Node16",
        "lib": [
            "es2020",
            "dom"
        ],
        "outDir": "./lib",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "baseUrl": "./"
    },
    "include": [
        "src",
        "index.d.ts"
    ],
    "exclude": [
        "lib",
    ],
}